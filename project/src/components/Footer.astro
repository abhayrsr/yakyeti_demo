<style>
  .footer {
   background: linear-gradient(135deg, #f69e8d, #fbd1c9);
    padding: 3rem 0 0;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-section h3,
  .footer-section h4 {
    
    color: #F14522;

    font-size: 1.25rem;
    margin-bottom: 1rem;
  }

  .footer-logo h3 {

    color: #F14522;
    font-size: 2rem;
    margin-bottom: 0.25rem;
  }

  .footer-tagline {
    font-size: 0.85rem;
    color: #1E2837;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 1rem;
  }

  .footer-description {
     color: #1E2837;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
        color: #1E2837;

    text-decoration: none;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background: #F14522;

    transform: translateY(-2px);
  }

  .footer-links {
    list-style: none;
    padding: 0;
  }

  .footer-links li {
    margin-bottom: 0.5rem;
  }

  .footer-links a {
   color: #1E2837;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-links a:hover {
     color: #F14522;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .contact-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .contact-icon {
    font-size: 1.2rem;
    margin-top: 0.1rem;
  }

  .contact-item p {
     color: #1E2837;
    margin: 0;
    line-height: 1.5;
  }

  .opening-hours {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .hours-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
   color: #1E2837;
    padding: 0.5rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .hours-item:last-child {
    border-bottom: none;
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: 1.5rem 0;
    margin-top: 2rem;
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-bottom p {
       color: #1E2837;

    margin: 0;
  }

  .footer-bottom-links {
    display: flex;
    gap: 1.5rem;
  }

  .footer-bottom-links a {
           color: #1E2837;

    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }

  .footer-bottom-links a:hover {
        color: #F14522;

  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .social-links {
      justify-content: center;
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
    }

    .opening-hours {
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-gap: 10px; /* reduce the gap */
  }  }

</style>
